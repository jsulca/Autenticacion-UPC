@model AutenticarModel.LoginVM
@{
    Layout = null;
    string? url = ViewBag.Url;
}

<!DOCTYPE html>
<html class="no-js" lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ID USUARIO</title>
    <meta name="description" content="Sistema Id Usuario - UPC" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Apple Mobile -->
    <meta name="apple-mobile-web-app-title" content="">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- Apple icons -->
    <link rel="apple-touch-icon" sizes="152x152" href="~/img/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/img/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/img/apple-icon-60x60.png">
    <!-- WebFonts -->
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true" />
    <style>
        #panel-izquierdo img {
            width: 100%;
        }
    </style>
</head>
<body class="pace-done">
    <div class="site-wrapper clearfix">
        <header class="site-header">
            <div class="container-fluid">
                <div class="header-global-epg">
                    <div class="pull-right pr-21 pt-9">
                        <ul class="list-sinestilo">
                            <li class="pull-left mr-14"><span class="text-menu-header"><a href="https://www.upc.edu.pe/" class="white-link" target="_blank">Portal</a></span></li>
                            <li class="pull-left mr-14"><span class="text-menu-header"><a href="https://www.upc.edu.pe/servicios/" class="white-link" target="_blank">Servicios</a></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <section class="site-content login">
            <div class="container-login">
                <div class="row">
                    <div class="col-md-7 col-sm-6" id="panel-izquierdo">
                        <img src="https://pregrado.upc.edu.pe/static/img/covers/Ing-Sistemas-mobile.jpg" alt="Logo" loading="lazy" style="min-height: 39.1rem;object-fit:cover;" />
                    </div>
                    <div class="col-md-5 col-sm-6">
                        <section class="login-box clearfix">
                            <!--Anna Ini - 18-10-2016-->
                            <div class="tabs">
                                <div class="tabs-content">
                                    <div class="row in" id="pregrado">
                                        <div class="pt-14 pb-21" style="text-align: center;">
                                            <span class="text-uppercase text-title-login">SISTEMA</span>
                                            <br />
                                            <span class="text-uppercase text-title-login">ID USUARIO</span>
                                        </div>
                                        <form method="post" asp-controller="Autenticar" asp-action="Login" asp-antiforgery="true" asp-route-url="@url">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Código de usuario" asp-for="Usuario" autofocus="" />
                                                <span asp-validation-for="Usuario" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control" placeholder="Contraseña" asp-for="Clave" />
                                                <span asp-validation-for="Clave" class="text-danger"></span>
                                            </div>

                                            @if (!string.IsNullOrEmpty(Model.Mensaje))
                                            {
                                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                                    <p>@Model.Mensaje</p>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                                                </div>
                                            }

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-lg btn-primary full-width">
                                                    Ingresar
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row mt-15">
                                    <div class="text-center">
                                        <b class="text-helvetica-11 text-uppercase mt-14">
                                            <a href="https://micuenta.upc.edu.pe/Home/recoverPass" target="_blank">
                                                ¿Olvidaste tu contraseña?
                                            </a>

                                        </b>
                                    </div>
                                </div>
                            </div>

                        </section>
                    </div>
                </div>
            </div>
        </section>
        <footer class="login-footer">
            <div class="container-login">
                <div class="row">
                    <div class="col-sm-2 col-xs-6">
                        <img src="~/img/laureate.png" />
                    </div>
                    <div class="col-sm-10 col-xs-6 text-right pt-8">
                        <span>&copy; UPC @DateTime.Now.Year</span><br>
                        <span>Teléfono: 630 3333</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>

